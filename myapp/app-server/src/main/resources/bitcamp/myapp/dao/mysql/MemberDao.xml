<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.MemberDao">

  <resultMap type="bitcamp.myapp.vo.Member" id="memberMap">
    <id     column="member_no"      property="no"/>
    <result column="name"           property="name"/>
    <result column="email"          property="email"/>
    <result column="password"       property="password"/>
    <result column="gender"         property="gender"/>
    <result column="created_date"   property="createdDate"/>
    
  </resultMap>

  <select id="insert" parameterType="bitcamp.myapp.vo.Member">
    insert into myapp_member(name, email, password, gender)
      values(#{name}, #{email}, sha1(#{password}), #{gender})
  </select>
  
  <select id ="findAll"  resultMap="memberMap">
    select
      member_no,
      name, email,
      gender
    from
      myapp_member
    order by name asc
  </select>  
  
  <select id ="findBy" parameterType="int" resultMap="memberMap">
    select
      member_no,
      name,
      email,
      gender,
      created_date
    from
      myapp_member
    where
      member_no=#{memberNo}
  </select>
    
  <select id ="findByEmailAndPassword" parameterType="bitcamp.myapp.vo.Member" resultMap="memberMap">
    select
      member_no,
      name,
      email,
      gender,
      created_date
    from
      myapp_member
    where
      email=#{email}
      and password=sha1(#{password})
  </select>
  
  <update id="update" parameterType="bitcamp.myapp.vo.Member">
    update myapp_member set
      name=#{name},
      email=#{email},
      password=sha1(#{password}),
      gender=#{gender}
    where
      member_no=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from myapp_member
    where
      member_no=#{no}
  </delete>
  
</mapper>